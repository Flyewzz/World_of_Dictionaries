<p id="notice"><%= notice %></p>

<h1>Dictionaries</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @dictionaries.each do |dictionary| %>
    <tr>
      <td><%= dictionary.title %></td>
      <td><a class="show_table" href="#" id="show_<%= dictionary.id %>">Show</a>
        <div id="table_<%= dictionary.id %>"></div>
      </td>
      <td><%= link_to 'Edit', edit_dictionary_path(dictionary) %></td>
      <td><%= link_to 'Destroy', dictionary, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dictionary', new_dictionary_path %>
